import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int num=sc.nextInt(),count=0,n=num;
        while(num>0) {
            int rem=num%10;
            count+=rem;
            num/=10;
        }
        System.out.println((n%count==0)?"Harshad Number":"Not Harshad Number");
    }
}
