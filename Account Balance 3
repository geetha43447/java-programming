import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int bal=sc.nextInt(),type=sc.nextInt();
        switch(type) {
            case 1:
                int dep=sc.nextInt();
                System.out.println((bal+dep));
                break;
            case 2:
                int wit=sc.nextInt();
                if(wit>bal) System.out.println("Insufficient Balance");
                else System.out.println((bal-wit));
                break;
            default: System.out.println("Invalid Input");
        }
    }
}
