import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        String str=sc.next();
        int star=0,hash=0;
        for(int i=0;i<str.length();i++) {
            if(str.charAt(i)=='*') star++;
            else hash++;
        }
        int diff;
        if(star>hash) diff=star-hash;
        else diff=hash-star;
        if(diff==0) System.out.println(0);
        else {
            if(diff%2==0) System.out.printf("The Difference of the character in the given string: %02d",diff);
            else System.out.printf("The Difference of the character in the given string: %03d",diff);
        }
    }
}
